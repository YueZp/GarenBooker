<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="?attr/actionModeSelectAllDrawable"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/dimens_5dp"/>

        <TextView
            android:id="@+id/tv_title_mid"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/cor_ffffff"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="?attr/actionModeSelectAllDrawable"
            android:scaleType="fitCenter"
            android:layout_marginRight="@dimen/dimens_5dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/title_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

</LinearLayout>